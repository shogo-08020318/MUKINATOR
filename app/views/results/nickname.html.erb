<main>
  <div class='p-4'>
    <h1 class='nickname-title'>ニックネーム入力</h1>
  </div>

  <div class='p-6'>
    <%= form_with model: @result, url: trouble_category_results_path, local: true do |f| %>
      <%= f.label 'ニックネームを入力してください', class:'is-size-1' %>
      <div class='columns is-mobile'>
        <div class="p-6 column is-10 is-offset-1">
          <div class="p-4">
            <%= f.text_field :nickname, placeholder: '脳筋　太郎', class: 'column is-8 is-offset-2 input is-link is-large' %>
          </div>
          <div class='column is-12 pt-6 pb-6 is-centered'>
            <%= image_tag 'nickname_img', class: 'pt-6 pb-6'%>
          </div>
          <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <%= f.submit '次へ', class:'m-2 mt-6 custom-btn btn-1 submit-button button' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
